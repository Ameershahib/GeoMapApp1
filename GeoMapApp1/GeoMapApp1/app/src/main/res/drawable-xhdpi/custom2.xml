<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#00FF00" />
            <stroke
                android:width="1dp"
                android:color="#cccccc" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
<item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="#FFBF00" />
            <stroke
                android:width="1dp"
                android:color="#cccccc" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

</selector>